<div class="jumbotron text-center">
    <h1 class="text-center">Eat The Burger</h1>
    <img class="burger" src="/images/burger-outline-filled.png"> 
</div>
<div class="container">
    <div class="col-md-6 text-center">
        <h2>Burgers Ready to Eat</h2>
        <ul class="burgers">
            {{#each burgers}} 
                {{#unless this.devoured}}
            <li>    
                {{this.burger_name}}  
                <form method="POST" action="/eat/{{this.id}}?_method=PUT">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit" name="burgerId" class="btn btn-danger center-block offset-70">Devour it!</button>
                </form>
                <hr>
            </li>
                {{/unless}} 
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6 text-center">
        <h2>Devoured Burgers</h2>
        <ul class="devoured-burgers">
            {{#each burgers}}
                {{#if this.devoured}}
            <li>
                {{this.burger_name}}
                <form method="POST" action="/eat/{{this.id}}?_method=PUT">
                    <input type="hidden" name="devoured" value="false">
                    <button type="submit" name="burgerId" class="btn btn-primary center-block offset-70">Eat Again </button>
                </form>
            </li>
            <hr>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-12 text-center">
         <h2>Create Your Own!</h2>
            <form method="POST" action="/add">
                <div class="form-group">
                    <textarea class="form-control" name="burger_name" placeholder="Name"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Create</button>    
            </form>
    </div>
</div>
